{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "outDir": "./lib",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules"
  ],
  "filesGlob": [
    "./typings/index.d.ts",
    "./node_modules/typescript/lib/lib.d.ts",
    "./src/**/*.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  },
  "files": [
    "./typings/index.d.ts",
    "./node_modules/typescript/lib/lib.d.ts",
    "./src/cli.ts",
    "./src/index.ts",
    "./src/locale.ts",
    "./src/options.ts",
    "./src/output.ts",
    "./src/source.ts",
    "./src/translate.ts",
    "./src/types.ts",
    "./src/utils.ts"
  ]
}
